%html
  %head
    - if site.assets_dev
      = "{{ 'app' | javascript }}"
      = "{{ 'app' | stylesheet }}"
      %meta{asset_path: "{% asset_path index-bg.jpg %}"}
      %meta{asset_path: "{% asset_path index-logo.png %}"}
      %meta{asset_path: "{% asset_path logo.png %}"}
    - else
      = "{% include assets.html %}"
